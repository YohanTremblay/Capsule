@model CapsuleIdentity.Models.VetementCreation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vetement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <p>
                   <label asp-for="VetementGenres" class="control-label"></label>
                   <select asp-for="VetementGenres" asp-items="Model.Genres">
                        <option value="">All</option>
                    </select>
                </p>
            </div>

            <div class="form-group">
                <label asp-for="Couleur" class="control-label"></label>
                <input asp-for="Couleur" class="form-control" />
                <span asp-validation-for="Couleur" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="DateObtention" class="control-label"></label>
                <input asp-for="DateObtention" type="date" class="form-control" />
                <span asp-validation-for="DateObtention" class="text-danger"></span>
            </div>


             <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>




            <div>
                @{
                    // Tableau de valeurs et d'étiquettes pour les boutons radio
                    var values = new int[] { 1, 2, 3, 4, 5 };
                    var labels = new string[] { "★", "★★", "★★★", "★★★★", "★★★★★" };
                }
                <label asp-for="Rating" class="control-label"></label>
                @foreach (var i in Enumerable.Range(0, values.Length))
                {
                    <label>
                        @Html.RadioButton("rating", values[i], false, new { @class = "rating-button" })
                        @labels[i]
                    </label>
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
